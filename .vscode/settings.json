{
  // VSCode
  "explorer.compactFolders": false,
  "editor.rulers": [120, 160],
  "files.exclude": {
    "**/*.pyc": {
      "when": "$(basename).py"
    },
    "**/__pycache__": true,
    "**/*.pytest_cache": true,
    "**/Sikuli_java**": true
  },

  // "terminal.integrated.env.windows": {
  //   "PYTHONPATH": "${workspaceFolder}"
  // },

  //Code Runner
  "code-runner.executorMapByFileExtension": {
    ".robot": "cls ; uv run robot -d logs --loglevel TRACE"
  },
  "workbench.colorCustomizations": {
    "editorInfo.foreground": "#006eff", 
    "editorError.foreground": "#F00",
    "editorWarning.foreground": "#ffa23e"
  },

  // "python.defaultInterpreterPath": "${workspaceFolder}\\.vscode\\.venv\\Scripts\\python.exe",
  "python.experiments.optInto": ["pythonTerminalEnvVarActivation"],

  // Black Formatter Python
  "black-formatter.args": ["--line-length=160"],

}
